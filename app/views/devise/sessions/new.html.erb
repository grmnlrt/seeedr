<div class="container">
  <div class="row padded">
    <div class="col-xs-6 col-xs-offset-3">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <div class="row remember_password">
            <div class="col-xs-6">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="col-xs-6">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-right' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: 'btn btn-block btn-danger' %>
            </div>
          <% end %>
          </div>
        </div>
        <br>
        <hr>
        <br>
        <div class="row signup">
          <div class="col-xs-6">
            <p>Don't have an account yet ?</p>
          </div>
          <div class="col-xs-6">
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-primary pull-right' %><br />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
