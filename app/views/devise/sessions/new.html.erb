<div class="container">
  <div class="row padded">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'show-login-form' }) do |f| %>
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: 'btn btn-block btn-primary' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %>
        <hr>
        <p>Don't have an account yet ?</p>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-block btn-primary', id: 'second-cta' %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), id: 'facebook-connect', class: 'btn btn-block btn-primary' %><br />
        <% end -%>
      <% end %>
    </div>
  </div>
</div>
