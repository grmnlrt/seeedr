<% content_for :body_id, "home" %>
<!-- banner -->
<div class="banner" style="background: linear-gradient(155deg, rgba(5, 5, 5, 0.6) 10%, rgba(5, 5, 5, 0.2) 80%), url('<%= image_path "office.jpg" %>');"></div>
<div id="slideshow">
  <div class="slide" style="background: linear-gradient(155deg, rgba(5, 5, 5, 0.6) 10%, rgba(5, 5, 5, 0.2) 80%), url('<%= image_path "office2.jpg" %>');">
  </div>
  <div class="slide" style="background: linear-gradient(155deg, rgba(5, 5, 5, 0.6) 10%, rgba(5, 5, 5, 0.2) 80%), url('<%= image_path "office5.jpg" %>');">
  </div>
  <div class="slide" style="background: linear-gradient(155deg, rgba(5, 5, 5, 0.6) 10%, rgba(5, 5, 5, 0.2) 80%), url('<%= image_path "office.jpg" %>');">
  </div>
  <div class="slideshow-content text-center">
    <h1>Enlighten Your Office with Art</h1>
    <p> Exhibit artists of tomorrow in your office</p>
    <p class="vanity-data"> 300 Artists - 80 exhibitions created </p>
    <%= link_to "Create my exhibit", new_step1_exhibitions_path, class: "btn btn-primary btn-lg", id: "custom" %>
  </div>
</div>
<!-- key step-->

<div class="wrapper padded-mini bg-grey">
  <div class="container-fluid">
    <div class="row">
      <div class="smaller-box">
        <h2 class="padded-mini text-center">An easy process</h2>
        <div class="col-xs-12 col-sm-6 col-md-4 text-center">
          <div class="key-step">
            <div><%= image_tag "create.png" %></div>
            <h3>Create your exhibition</h3>
            <p class="key-content">Start creating your exhibition request by following the matching-driven form. When you are done, submit it: Your exhibition request is online. </p>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 text-center">
          <div class="key-step">
            <div><%= image_tag "artist.png" %></div>
            <h3>Artists apply to your exhibition</h3>
            <p class="key-content">Our community of hundreds of artists can now see your exhibition request and apply to bring their art in your offices. </p>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-0 text-center">
          <div class="key-step">
            <div><%= image_tag "heart.png" %></div>
            <h3>Pick your favorite Artist</h3>
            <p class="key-content">Finalize the process by picking your favorite artist! Your work stop here, Seeedr takes care of the rest.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "Read more", "#", class: "btn btn-primary btn-lg read" %>
  </div>
</div>

