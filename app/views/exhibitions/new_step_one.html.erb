<div class="container padded">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <h1>New exhibition</h1>
      <h2>Select your favorites categories :</h2>
      <form action="<%= new_step2_exhibitions_path %>">
        <div id="select-category">
          <% @categories.each do |category| %>
            <% artwork_selected = category.artworks.sample %>
            <label>
              <input type="checkbox" name="selected_categories[]" value="<%= artwork_selected.category.id %>">
                  <%= cl_image_tag artwork_picture(artwork_selected), width: 400, height: 400, crop: :fill, class: 'sample-artwork'%>
                  <p><%= category.name %></p>
            </label>
          <% end %>
        </div>
        <input type="submit" class="btn btn-primary pull-right">
      </form>
    </div>
  </div>
</div>
