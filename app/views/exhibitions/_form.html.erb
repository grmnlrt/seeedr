<%= simple_form_for(@exhibition) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :min_price %>
  <%= f.input :start_date, :as=> 'string' ,:label => 'Start date', input_html: { id: 'datetimepicker1' } %>
  <%= f.input :duration, collection: @durations%>
  <%#= f.input :end_date, :as=> 'string' ,:label => 'End date', input_html: { id: 'datetimepicker7' } %>
  <%= f.input :photos, as: :attachinary %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to all Exhibitions", exhibitions_path, class: "links_show pull-right" %>

