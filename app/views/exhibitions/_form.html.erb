<%= simple_form_for(@exhibition) do |f| %>
  <%= f.error_notification %>
  <%= f.input :categories, as: :hidden, :input_html => { :value => @selected_categories_id }  %>
  <%= f.input :styles, as: :hidden, :input_html => { :value => @selected_styles_id }  %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :start_date, :as=> 'string' ,:label => 'Start date', input_html: { id: 'datetimepicker1' } %>
  <%= f.input :duration, collection: @durations %>
  <%= f.input :min_price, label: 'Minimum price', disabled: true, hint: 'You cannot change this field' %>
  <%= f.input :price, label: "Your price", hint: "Must at-least equals minimum price" %>
  <%= f.input :photos, as: :attachinary %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to my dashboard", dashboard_company_users_path, class: "links_show pull-right" %>
