<%= simple_form_for(@exhibition) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :min_price %>
  <%= f.input :start_date, :as=> 'string' ,:label => 'Start date', input_html: { id: 'datetimepicker1' } %>
  <%= f.input :duration, collection: @durations%>
  <%= f.input :photos, as: :attachinary %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to all Exhibitions", exhibitions_path, class: "links_show pull-right" %>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDANjx3bosEtIyzJaoWs50Wnt6nt_1rmxU"></script>
<% end %>
