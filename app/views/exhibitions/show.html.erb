<% link_image = "banner-artist.jpeg" %>
<div class="banner-company" style="background-image: url('<%= cl_image_path link_image %>');"></div>
  <div class="wrapper exhibition padded">
    <div class="container">
      <div class="row">
        <div class="company-title text-center">
          <h2><%= @exhibition.user.company_name %></h2>
        </div>

        <div class="col-xs-12 show-all">
          <div class="text-center">
            <ul class="list-inline">
              <li><a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
              <li><a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
              <li><a href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
            </ul>
            <h2>"<%= @exhibition.title %>"</h2>
          </div>


        <div class="list-exhibition">
          <p><i class="fa fa-user" aria-hidden="true"></i><%= @exhibition.user.first_name %> <%= @exhibition.user.last_name %></p>
          <p><i class="fa fa-clock-o" aria-hidden="true"></i>Starting: <%= @exhibition.start_date%>  Ending: <%= @exhibition.end_date%></p>
          <p><i class="fa fa-map-marker" aria-hidden="true"></i><%= @exhibition.address %> </p>
          <p><i class="fa fa-money" aria-hidden="true"></i><%= @exhibition.min_price_cents %>$</p>
          <br>
        </div>

        <div class="description-content text-center">
          <h3>Description</h3>
            <p> <%= @exhibition.description %></p>
        </div>


